        <field name="arch" type="xml">
            <form string="Drivers">
                <group>
                    <field name="drivers_name"/>
                    <field name="drivers_store"/>
                </group>
            </form>
        </field>
    </record> -->

    <!-- drivers action window -->
    <record id="drivers_action" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">drivers</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menu Item for Drivers placed under Operations -->
    <menuitem id="drivers_menu" name="Drivers" parent="stock.menu_stock_warehouse_mgmt" action="drivers_action" sequence="10"/>
</odoo>
