<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- drivers tree view -->
    <record id="drivers_view_tree" model="ir.ui.view">
        <field name="name">drivers.view.tree</field>
        <field name="model">drivers</field>
        <field name="arch" type="xml">
            <tree string="Drivers" editable="bottom">
                <field name="drivers_name"/>
                <field name="drivers_store"/>
            </tree>
        </field>
    </record>

    <!-- drivers form view -->
    <!-- <record id="drivers_view_form" model="ir.ui.view">
