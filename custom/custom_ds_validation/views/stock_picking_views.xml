<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.delivery.block</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Optional: hide print button when state is not done -->
            <xpath expr="//button[@name='action_report_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'done')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
