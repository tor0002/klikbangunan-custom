<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="update_deposit" model="ir.actions.server">
        <field name="name">Update Partner Deposit</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="point_of_sale.model_pos_session"/>
        <field name="state">code</field>
        <field name="code">model._set_update_deposit()</field>
    </record>

    <record id="update_deposit_action_rule" model="base.automation">
        <field name="name">Update Partner Deposit</field>
        <field eval="True" name="active" />
        <field name="model_id" ref="point_of_sale.model_pos_session"/>
        <field name="trigger">on_create</field>
        <field name="action_server_id" ref="customer_deposit.update_deposit"/>
    </record>

</odoo>
