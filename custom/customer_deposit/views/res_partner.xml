<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="15"/>        
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]" position="before">
                <header>
                    <button icon="fa-plus" name="action_invoice_register_payment" type="object" string="Buat Deposit"/>
                </header>  
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-dollar">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="amount_deposit"/></span>
                        <span class="o_stat_text">Deposit</span>
                    </div>
                </button>
                <button class="oe_stat_button" icon="fa-file">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="total_unpaid_invoice"/></span>
                        <span class="o_stat_text">Hutang</span>
                    </div>                
                    
                </button>
            </xpath>
        </field>
     </record>
</odoo>