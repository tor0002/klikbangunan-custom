<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PaymentScreen-Paymentmethods">
        <t t-jquery=".paymentmethods" t-operation="replace">
            <div class='paymentmethods'>
                <t t-foreach="widget.pos.payment_methods" t-as="payment_method">
                    <div class="button paymentmethod" style="line-height: 25px; padding: 37px" t-att-data-id="payment_method.id">
                        <t t-esc="payment_method.name" />
                        <t t-if="payment_method.is_deposit">
                            <div>
                                <span >Current Balance: </span>
                                <span class='js_customer_deposit'>
                                    <t t-if="widget.pos.get_client()">
                                        <t t-esc="widget.format_currency(widget.pos.get_client().amount_deposit)"/>
                                    </t>
                                    <t t-if="!widget.pos.get_client()">
                                        N/A
                                    </t>
                                </span>                            
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </t>
    
</templates>