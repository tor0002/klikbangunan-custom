<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="ProductItem"
        t-inherit="point_of_sale.ProductItem"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[contains(@class, 'product-name')]" position="after">
        <div t-if="props.product.uom_name" class="product-uom_name">
            <t t-esc="props.product.uom_name"/>
        </div>
        </xpath>    
    </t>

</templates>
