<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- Wizard View -->
        <record model="ir.ui.view" id="refused_wizard_form_view">
            <field name="name">refused.wizard.form.view</field>
            <field name="model">refused.order</field>
            <field name="arch" type="xml">
                <form string="Refused Order">
                    <group>
                        <field name="order_id"/>
                        <field name="refused_reason"/>
                    </group>
                    <footer>
                        <button name="refused_order" type="object" string="Refused" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</odoo>
